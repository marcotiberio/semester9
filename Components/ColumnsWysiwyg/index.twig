<flynt-component client:visible name="ColumnsWysiwyg">
  <div class="container boxed">
    {% if preContent %}
      <div class="preContent h1">
        {{ preContent}}
      </div>
    {% endif %}
    <div class="content">
      <div class="columns">
        {% for column in columnTexts %}
          <div class="column">
            {{ column.columnText|e('wp_kses_post') }}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
